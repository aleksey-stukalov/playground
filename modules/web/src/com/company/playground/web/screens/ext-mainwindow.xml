<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.company.playground.web.screens.ExtAppMainWindow"
        extends="/com/haulmont/cuba/web/app/mainwindow/mainwindow.xml"
        messagesPack="com.company.playground.web.screens"
        xmlns:main="http://schemas.haulmont.com/cuba/mainwindow.xsd">
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <split id="foldersSplit">
            <main:workArea id="workArea">
                <main:initialLayout>
                    <groupBox caption="scan"
                              spacing="true">
                        <hbox spacing="true">
                            <button id="runScanBtn"
                                    caption="Run Scan"
                                    invoke="runScan"/>
                            <button id="checkProxyBtn"
                                    caption="Check Proxy"
                                    invoke="onCheckProxyBtnClick"/>
                        </hbox>
                    </groupBox>
                </main:initialLayout>
            </main:workArea>
        </split>
    </layout>
</window>
